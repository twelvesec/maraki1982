@model List<string>

@{
    ViewData["Title"] = "Logs";
}

<div class="container">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Filename</th>
                    <th scope="col">Action</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td>@Model[i]</td>
                    <td><a asp-action="DisplayLogs" asp-route-logFileId="@i">Check Logs</a></td>
                    <td><a asp-action="Download" asp-route-logFileId="@i">Download Log File</a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>