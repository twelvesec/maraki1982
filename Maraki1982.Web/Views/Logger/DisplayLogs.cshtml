@model Maraki1982.Web.Helpers.PaginatedList<Log>

@{
    ViewData["Title"] = "Log Display";
}
<div class="container">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4"></div>
        <div class="col-4">
            <div style="text-align:right">
                @if (Model.HasPreviousPage)
                {
                    <a asp-action="DisplayLogs" asp-route-pageNumber="@(Model.PageIndex - 1)" class="btn btn-default">Previous</a>
                }

                @if (Model.HasNextPage)
                {
                    <a asp-action="DisplayLogs" asp-route-pageNumber="@(Model.PageIndex + 1)" class="btn btn-default">Next</a>
                }
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Date</th>
                        <th scope="col">Message</th>
                        <th scope="col">Exception</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <th scope="row" class="logentry">@(ViewBag.Counter + i)</th>
                            <td class="logentry">@Model[i].Date</td>
                            <td class="logentry">@Model[i].Message</td>
                            <td class="logentry">@Model[i].Exception</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Log List</a>
</div>
